<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDc"
    tools:context=".PdfActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/idc_flash"
            />
        <EditText
            android:id="@+id/userNameEtPdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="textPersonName"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/userPhoneEtPdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:inputType="phone"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#efce2d"
            android:padding="12dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/item1NameETPdf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Laptop..."
                android:gravity="center"
                />
            <EditText
                android:id="@+id/item1QuantityETPdf"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:hint="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:background="@null"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#efce2d"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/item2NameETPdf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Battery..."
                android:gravity="center"
                />
            <EditText
                android:id="@+id/item2QuantityETPdf"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:hint="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:background="@null"
                />

        </LinearLayout>

        <Button
            android:id="@+id/generateBtnPdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate Invoice"
            />

    </LinearLayout>



</RelativeLayout>